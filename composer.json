{
  "name": "ondrej-bouda/ivory",
  "description": "A PHP PostgreSQL layer as complete as possible",
  "homepage": "https://github.com/ondrej-bouda/ivory",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Ond≈ôej Bouda",
      "email": "bouda@edookit.com"
    }
  ],
  "config": {
    "vendor-dir": "lib/composed"
  },
  "require": {
    "php": "^7.1",
    "ext-mbstring": "*",
    "ext-pgsql": "*",
    "psr/cache": "^1.0"
  },
  "require-dev": {
    "ext-pdo_pgsql": "*",
    "phpunit/phpunit": "~6.0",
    "phpunit/dbunit": "~3.0",
    "nategood/commando": "*",
    "dibi/dibi": "*",
    "doctrine/dbal": "*",
    "illuminate/database": "*",
    "cache/array-adapter": "*",
    "cache/filesystem-adapter": "*"
  },
  "suggest": {
    "cache/memcached-adapter": "Some PSR-6 compliant cache pool is essential for Ivory to be fast enough. Use \\Ivory\\Ivory::setDefaultCacheImpl()."
  }
}